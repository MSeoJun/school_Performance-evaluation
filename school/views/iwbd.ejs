<!DOCTYPE html>
<html onselectstart="return false">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>아이워너비더도제</title>
    <style>
body {
    padding: 0;
    margin: 0;
}

/* 세로선 */
#line2 {
    position:fixed;
    left:50%;
    transform: translateX(-13.8%);
    border:4px solid black;
    height:100vh;
    width:0%;
}
        
img {
    position: fixed;
    left: 15%;
    top: 13%;
    transform: scaleX(-1);
    filter: FlipH;
    width: 17%;
    height: 20%;
    animation-name: '';   
}

@keyframes left {
    from {left: 0%;}
    to {left:0%;}
}    

hr.line1 {
    width: 100%;
    color: red;
    border: 4px solid black;
    position: fixed;
    top: 50%;
}

#one {
    position: fixed;
    font-size: 150px;
    left: 20%;
    top: 10%;
    padding: 0;
    margin: 0;
}

#two {
    position: fixed;
    font-size: 150px;
    right: 20%;
    top: 10%;
    padding: 0;
    margin: 0;
}

#three {
    position: fixed;
    font-size: 150px;
    left: 20%;
    bottom: 10%;
    padding: 0;
    margin: 0;
}

#four {
    position: fixed;
    font-size: 150px;
    right: 20%;
    bottom: 10%;
    padding: 0;
    margin: 0;
}
    </style>
</head>
<body>
    <hr class="line1" />
    <div id="line2"><p></p></div>
    <h1 id="one">1</h1>
    <h1 id="two">2</h1>
    <h1 id="three">3</h1>
    <h1 id="four">4</h1>
    <img src="https://www.hushwish.com/wp-content/uploads/2018/10/cha_clash_animation-1.gif">

    <script>
        const body = document.querySelector('body');
        const img = document.querySelector('img');
        var left;
        
        body.addEventListener('keypress',(e) => {
        if(e.key === "1") { //왼쪽
            console.log("left");
            console.log(img.offsetLeft);
            img.style.left = '15%';
            img.style.top = '13%';
        }

        if(e.key === "2") { //오른쪽
            console.log("right");
            img.style.left = '68%';
            img.style.top = '13%';
        }

        if(e.key === "3") { //위쪽
            console.log("up");  
            img.style.left = '15%';
            img.style.top = '68%';

        }

        if(e.key === "4") { //아래쪽
            console.log("down");
            img.style.left = '68%';
            img.style.top = '68%';

        }
    });
    </script>
</body>
</html>